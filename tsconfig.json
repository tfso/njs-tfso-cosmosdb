{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2020"
        ],
        "downlevelIteration": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "noEmitOnError": true,
        "declaration": true,
        "sourceMap": true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "outDir": "./lib"
    },
    "exclude": [
        "lib",
        "node_modules"
    ]
}